---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - pages
    - posts

layout: 'layouts/base.njk'
permalink: /tags/{{ tag | slugify }}/
---

{% set postslist = collections[ tag ] %}



<ol >
{% for post in postslist %}
    {{ post }}
	<li >
		<a href="{{ post.url }}">{{ post.data.title }} </a>
	</li>
{% endfor %}
</ol>


