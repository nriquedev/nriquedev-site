---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - pages
    - posts

layout: 'layouts/base.njk'
permalink: /tags/{{ tag | slugify }}/
tags: "pages"
eleventyComputed:
  title: 'Posts with tag: {{ tag | slugify }}' 
---

{% set postslist = collections[ tag ] %}

{% for post in postslist %}
  <a
    class="
          link-secondary 
          link-offset-2 
          link-underline-opacity-0 
          link-opacity-75-hover
          link-underline-opacity-25-hover
          "
    href="{{ post.url }}">
      {{ post.data.title }} 
      <span class="fs-6">( {{ post.data.date | epDate }} ) </span>
   </a>
   </br> 
{%- endfor -%}


